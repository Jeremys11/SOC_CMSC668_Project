{
    "title": "Mental HealthCare Survey",
    "questions": [
        {
            "type": "string",
            "label": "Your Age",
            "required": true
        },
        {
            "type": "radio",
            "label": "Gender",
            "required": true,
            "options": [
                "Male",
                "Female"
            ]
        },
        {
            "type": "string",
            "label": "Country",
            "required": true
        },
        {
            "type": "radio",
            "label": "Do you have a family history of mental illness?",
            "required": true,
            "options": [
                "Yes",
                "No"
            ]
        },
        {
            "type": "radio",
            "label": "Have you sought treatment for a mental health condition?",
            "required": true,
            "options": [
                "Yes",
                "No"
            ]
        },
        {
            "type": "radio",
            "label": "If you have a mental health condition, do you feel that it interferes with?",
            "required": false,
            "options": [
                "Never",
                "Rarely",
                "Sometimes",
                "Often"
            ]
        },
        {
            "type": "string",
            "label": "How many employees does your company or organization have?",
            "required": true
        },
        {
            "type": "radio",
            "label": "Do you work remotely (outside of an office) at least 50% of the time?",
            "required": true,
            "options": [
                "Yes",
                "No"
            ]
        },
        {
            "type": "radio",
            "label": "Is your employer primarily a tech company/organization?",
            "required": true,
            "options": [
                "Yes",
                "No"
            ]
        },
        {
            "type": "radio",
            "label": "Does your employer provide mental health benefits?",
            "required": true,
            "options": [
                "Yes",
                "No",
                "Don't know"
            ]
        },
        {
            "type": "radio",
            "label": "Do you know the options for mental health care your employer provides?",
            "required": true,
            "options": [
                "Yes",
                "No",
                "Not sure"
            ]
        },
        {
            "type": "radio",
            "label": "Has your employer ever discussed mental health as part of an employee",
            "required": true,
            "options": [
                "Yes",
                "No",
                "Don't know"
            ]
        },
        {
            "type": "radio",
            "label": "Does your employer provide resources to learn more about mental health",
            "required": true,
            "options": [
                "Yes",
                "No",
                "Don't know"
            ]
        },
        {
            "type": "radio",
            "label": "Is your anonymity protected if you choose to take advantage of mental health or substance abuse treatment resources?",
            "required": true,
            "options": [
                "Yes",
                "No",
                "Don't know"
            ]
        },
        {
            "type": "radio",
            "label": "How easy is it for you to take medical leave for a mental health condition?",
            "required": true,
            "options": [
                "Very easy",
                "Somewhat easy",
                "Somewhat difficult",
                "Very difficult",
                "Don't know"
            ]
        },
        {
            "type": "radio",
            "label": "Do you think that discussing a mental health issue with your employer would have negative consequences?",
            "required": true,
            "options": [
                "Yes",
                "No",
                "Maybe"
            ]
        },
        {
            "type": "radio",
            "label": "Do you think that discussing a physical health issue with your employer would have negative consequences?",
            "required": true,
            "options": [
                "Yes",
                "No",
                "Maybe"
            ]
        },
        {
            "type": "radio",
            "label": "Would you be willing to discuss a mental health issue with your coworkers?",
            "required": true,
            "options": [
                "Yes",
                "No",
                "Some of them"
            ]
        },
        {
            "type": "radio",
            "label": "Would you be willing to discuss a mental health issue with your direct supervisor(s)?",
            "required": true,
            "options": [
                "Yes",
                "No",
                "Some of them"
            ]
        },
        {
            "type": "radio",
            "label": "Would you bring up a mental health issue with a potential employer in an interview?",
            "required": true,
            "options": [
                "Yes",
                "No",
                "Maybe"
            ]
        },
        {
            "type": "radio",
            "label": "Would you bring up a physical health issue with a potential employer in an interview?",
            "required": true,
            "options": [
                "Yes",
                "No",
                "Maybe"
            ]
        },
        {
            "type": "radio",
            "label": "Do you feel that your employer takes mental health as seriously as physical health?",
            "required": true,
            "options": [
                "Yes",
                "No",
                "Don't know"
            ]
        },
        {
            "type": "radio",
            "label": "Have you heard of or observed negative consequences for coworkers with mental health conditions in your workplace?",
            "required": true,
            "options": [
                "Yes",
                "No"
            ]
        }
    ]
}